{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(debugpy) Run ADC Simulator",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tools/adc-simulator/main.py",
      "console": "integratedTerminal",
      "args": ["--binary", "--rpmsg"],
      "env": {
        "ADC_STREAM": "${workspaceFolder}/tmp-adc"
      }
    },
    {
      "name": "(gdb) Launch QPMU App",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build-debug/app/qpmu-app",
      "args": ["--binary", "--rpmsg"],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [
        {
          "name": "ADC_STREAM",
          "value": "${workspaceFolder}/tmp-adc"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: build",
      "osx": {
        "program": "${workspaceFolder}/build-debug/app/qpmu-app.app/Contents/MacOS/qpmu-app",
        "MIMode": "lldb"
      }
    }
  ],
  "compounds": [
    {
      "name": "ADC Simulator + QPMU App",
      "configurations": ["(debugpy) Run ADC Simulator", "(gdb) Launch QPMU App"]
    }
  ]
}
